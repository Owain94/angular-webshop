.row
  .large-12.columns.text-center
    h2 {{ msg }}

.row
  .large-3.columns.right
    a.button.add-product(routerLink="/admin/addproduct") Product toevoegen

.row
  .large-2.columns.filter-margin
    span Filter

  .large-4.columns
    input(type="text", placeholder="Zoek", [formControl]="filterInput")

  .large-4.columns
    select([formControl]="filterCategory")
      option(value="")
      option(*ngFor="let category of categories; let i = index; trackBy: trackByFn", [value]="category.category") {{category.category}}

  .large-2.columns
    button.button((click)="reset()") Reset

hr.hr-margin

.row(*ngFor="let product of (products | filter: { name: filterText } | filter: { category: filterCategoryText }); let i = index; trackBy: trackByFn")
  .large-4.columns.actions-margin([innerHTML]="'Naam: ' + product.name | highlight : filterText")
  .large-4.columns.actions-margin([innerHTML]="'Categorie: ' + product.category | highlight : filterCategoryText")
  .large-2.columns
    button.button((click)="preview(product.photo)") Foto

  .large-1.columns.actions-margin
    a([routerLink]="['/admin/editproduct', product._id]")
      span.icon.icon-pencil

  .large-1.columns.actions-margin
    a((click)="delete(product._id, product.name)")
      span.icon.icon-trash

  hr.hr-margin
