div.row
  div.large-12.columns.text-center
    h2 {{ msg }}

form([formGroup]="addCategoryForm", (ngSubmit)="submitForm(addCategoryForm.value)")
  div.row
    div.large-10.columns
      label([ngClass]="{ 'error': !addCategoryForm.controls['name'].valid && addCategoryForm.controls['name'].touched }") Categorie
        input(type="text", [formControl]="addCategoryForm.controls['name']", [ngClass]="{ 'error': !addCategoryForm.controls['name'].valid && addCategoryForm.controls['name'].touched }")
      small.error(*ngIf="!addCategoryForm.controls['name'].valid && addCategoryForm.controls['name'].touched") Categorie naam is verplicht

    div.large-2.columns
      button.button.button-margin(type="submit", [disabled]="!addCategoryForm.valid || disabled") Toevoegen

div.row(*ngFor="let category of categories; let i = index; trackBy: trackByFn")
  div.large-10.columns {{ category.category }}
  div.large-1.columns.actions-margin
    a((click)="edit(category.category, category._id)")
      span.icon.icon-pencil

  div.large-1.columns.actions-margin
    a((click)="delete(category.category, category._id)")
      span.icon.icon-trash

  hr.hr-margin
