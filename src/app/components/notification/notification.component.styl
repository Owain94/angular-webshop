.simple-notification
  width 100%
  padding 10px 20px
  box-sizing border-box
  position relative
  float left
  margin-bottom 10px
  color #fff
  cursor pointer
  transition all 0.5s
  .sn-title
    margin 0
    padding 0 50px 0 0
    line-height 30px
    font-size 20px
  .sn-content
    margin 0
    font-size 16px
    padding 0 50px 0 0
    line-height 20px
  .icon
    position absolute
    box-sizing border-box
    top 0
    right 0
    width 70px
    height 70px
    padding 10px
    svg
      fill #fff
      width 100%
      height 100%
  &.rtl-mode
    direction rtl
    .sn-content
      padding 0 0 0 50px
    svg
      left 0
      right auto
  &.error
    background #f44336
    .sn-progress-loader
      span
        background #d32f2f
  &.success
    background #ea4c88
    .sn-progress-loader
      span
        background #cd2e6b
  &.alert
    background #ffdb5b
    .sn-progress-loader
      span
        background #edc242
  &.info
    background #03a9f4
    .sn-progress-loader
      span
        background #0288d1
  .sn-progress-loader
    position absolute
    top 0
    left 0
    width 100%
    height 5px
    span
      float left
      height 100%
  &.bare
    .sn-progress-loader
      span
        background #ccc
